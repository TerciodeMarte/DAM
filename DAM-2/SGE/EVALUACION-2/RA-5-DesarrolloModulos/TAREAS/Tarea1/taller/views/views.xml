<odoo>
  <data>
    <!-- explicit list view definition -->
    <record model="ir.ui.view" id="taller.coche_list">
      <field name="name">Lista de Coches</field>
      <field name="model">modulo.coche</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="modelo"/>
          <field name="marca"/>
          <field name="color"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="taller.averia_list">
      <field name="name">Lista de Averias</field>
      <field name="model">modulo.averia</field>
      <field name="arch" type="xml">
        <tree>
          <field name="coche"/>
          <field name="fecha"/>
          <field name="precio"/>
          <field name="tipo"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="taller.coche_form">
      <field name="name">Inserta un coche</field>
      <field name="model">modulo.coche</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <h1>Matricula: <field name="name"/></h1>
            <group>
              <field name="modelo" label="Modelo: "/>
              <field name="marca" label="Marca: "/>
              <field name="color" label="Color: "/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <record model="ir.ui.view" id="taller.averia_form">
      <field name="name">Inserta una averia</field>
      <field name="model">modulo.averia</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <h1>Coche: <field name="coche"/></h1>
            <group>
              <field name="tipo" label="Tipo: "/>
              <field name="fecha" label="Fecha: "/>
              <field name="precio" label="Precio: "/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="taller.coche_action_window">
      <field name="name">coche.accion</field>
      <field name="res_model">modulo.coche</field>
      <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.actions.act_window" id="taller.averia_action_window">
      <field name="name">averia.accion</field>
      <field name="res_model">modulo.averia</field>
      <field name="view_mode">tree,form</field>
    </record>


