    <!-- Top menu item -->

    <menuitem name="taller" id="taller.menu_root"/>

    <!-- menu categories -->

    <menuitem name="Coches" id="taller.coche" parent="taller.menu_root"/>
    <menuitem name="Averias" id="taller.averias" parent="taller.menu_root"/>

    <!-- actions -->

    <menuitem name="List" id="taller.menu_list" parent="taller.coche"
